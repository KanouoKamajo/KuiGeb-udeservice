<section id="galerie" class="py-5 bg-white"> {/* Bootstrap-Klassen für Padding und weißen Hintergrund */}
  <div class="container"> {/* Der Bootstrap-Container sorgt für die richtige Breite und Zentrierung */}
    <h2 class="text-center mb-4 display-4 fw-bold">Unsere Arbeiten in Bildern</h2> {/* Bootstrap-Klassen für Überschrift */}

    <details class="gallery">
      <summary class="text-primary text-decoration-none d-block text-center mb-4">Bildergalerie anzeigen</summary> {/* Bootstrap-Klassen für Textstil, Zentrierung und Abstand */}
      <div class="gallery-grid">
        {galleryImages.map((image) => (
          <a href={image.src}
            data-pswp-width={image.width}
            data-pswp-height={image.height}
            data-pswp-caption={image.caption}
            target="_blank">
            <img src={image.thumb} alt={image.alt} class="img-fluid" /> {/* img-fluid sorgt für responsives Bildverhalten */}
          </a>
        ))}
      </div>
    </details>
  </div>
</section>